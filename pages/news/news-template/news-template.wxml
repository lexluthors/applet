<template name="newsTemplate">
    <view class="articlelist" >
        <view class="author-time">
            <image class="author-icon" src="{{authorIcon}}" />
            <text class="author-name">{{authorName}}</text>
            <text class="author-date">{{authorDate}}</text>
        </view>
        <text class="title">{{title}}</text>
        <image class="article-img" mode="scaleToFill" src="{{articleImg}}" />
        <text class="article-text">{{articleText}}</text>
        <view class="article-like">
            <image class="article-like-icon" src="{{articleImg}}" />
            <text class="article-like-text">{{articleLikeSC}}</text>
            <image class="article-like-icon" src="{{articleImg}}" />
            <text class="article-like-text">{{articleLikeComment}}</text>
        </view>
    </view>
</template>